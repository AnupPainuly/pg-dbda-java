


enum Color
{
	RED,GREEN,BLUE  //RED , GREEN and BLUE are enum constants
	// ordinal value ==> 0  1   2
}

public class Day6_4 {

	public static void main(String[] args) 
	{
		Color[] c = Color.values();
	}
}



