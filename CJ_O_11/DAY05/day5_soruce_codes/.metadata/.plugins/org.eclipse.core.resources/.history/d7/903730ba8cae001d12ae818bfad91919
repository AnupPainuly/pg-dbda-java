//Array and functions
import java.util.Scanner;

public class Day5_8 
{
	private static void accept_arr(int[] arr) 
	{
		if(arr!=null)
		{
			Scanner sc=new Scanner(System.in);
			System.out.println("Enter Array elements :");
			for(int i=0;i<4;i++)
				arr[i]=sc.nextInt();
		}
		else
			System.out.println("Array is null");
	}
	private static void disp_arr(int[] arr) 
	{
		System.out.println("\n Array elements are : ");
		for(int ele : arr)
			System.out.print(ele+"\t");
		
	}

	public static void main(String[] args)
	{
		int a[]=null;
		int b[]=null;
		
		accept_arr(a);
		accept_arr(b);
		disp_arr(a);
		disp_arr(b);
	}

	

	
}
