//Array and functions
import java.util.Scanner;

public class Day5_7 
{
	private static void accept_arr(int[] arr) 
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter Array elements :");
		for(int i=0;i<4;i++)
			arr[i]=sc.nextInt();
	}
	
	private static void disp_arr(int[] arr) 
	{
		System.out.println("Array elements are : ");
		for(int ele : arr)
			System.out.print(ele+"\t");
		
	}

	public static void main(String[] args)
	{
		int a[]=new int[4];
		int b[]=new int[4];
		
		accept_arr(a);
		accept_arr(b);
		disp_arr(a);
		disp_arr(b);
	}

	

	
}
